<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/identification_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_quiz_txtbox"
    android:padding="16dp"
    app:ignore="NamespaceTypo">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="324dp"
        android:layout_height="348dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@+id/quizzes_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="8dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="398dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/identification_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="What is the answer?"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/identification_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type your answer here" />

            <Button
                android:id="@+id/submit_identification_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/bubblegum_pink"
                android:text="Submit" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quizzes_recycler_view"
        android:layout_width="232dp"
        android:layout_height="17dp"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_container"
        app:layout_editor_absoluteX="163dp"
        app:layout_editor_absoluteY="723dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
