<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@drawable/getstarted_bg"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:paddingStart="32dp"
            android:layout_marginTop="32dp"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/eduease_logo"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:layout_width="700dp"
            android:layout_height="84dp"
            android:importantForAccessibility="no"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/eduease" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cherrycreamsoda"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="center"
            android:padding="8dp"
            android:layout_marginBottom="104dp"
            android:text="@string/getstarted_tagline" />

        <Button
            android:layout_width="184dp"
            android:layout_height="48dp"
            android:id="@+id/getStarted_btn"
            android:backgroundTint="@color/bubblegum_pink"
            android:fontFamily="@font/jomolhari"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="@string/getstarted_btn" />
    </LinearLayout>
</LinearLayout>